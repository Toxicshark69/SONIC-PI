    sample :drum_cymbal_closed
    sleep 1
    sample :drum_cymbal_closed
    sleep 1
    sample :drum_cymbal_closed
    sleep 1
    sample :drum_cymbal_closed
    sleep 1
  end
  stop
end
sleep 16
