#PERSONAL SONG

use_bpm 180
use_synth :organ_tonewheel


live_loop :close_eyes do
  #First four measures
  play :gs3
  sleep 1.5
  play :gs3
  sleep 1.5
  play :c4
  sleep 1.5
  sleep 3.5
  play :f3, sustain: 4
  sleep 4
  sleep 2
  play :f4
  sleep 2
  
  # second four measures
  play :gs3
  sleep 1.5
  play :gs3
  sleep 1.5
  play :c4
  sleep 1.5
  sleep 3.5
  play :f3, sustain: 4
  sleep 4
  sleep 2
  play :f4
  sleep 2
  stop
end

sleep 16

